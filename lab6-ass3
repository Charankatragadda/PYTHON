#Count the number of nodes in a linked list.	
class Node: 

	
	def __init__(self, data): 
		self.data = data 
		self.next = None

class LinkedList: 

	
	def __init__(self): 
		self.head = None

	
	def count(self, search_for): 
		current = self.head        
		count = 0
		while(current is not None): 
			if current.data == search_for: 
				count += 1
			current = current.next
		return count 

	 
	def push(self, new_data): 
		new_node = Node(new_data) 
		new_node.next = self.head 
		self.head = new_node 

	
	def printList(self): 
		temp = self.head 
		while(temp): 
			print (temp.data), 
			temp = temp.next


#driver code
llist = LinkedList() 
llist.push(21) 
llist.push(19) 
llist.push(87) 
llist.push(21) 
llist.push(21) 

#displaying output
print ("count of 21 is % d" %(llist.count(21)) )
